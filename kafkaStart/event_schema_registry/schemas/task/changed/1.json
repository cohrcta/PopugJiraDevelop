{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title": "TaskChangeEvent",

  "type": "object",

  "additionalProperties": true,

  "properties": {
    "eventUID":      { "type": "string" },
    "eventVersion": { "type": "integer" },
    "eventName":    { "type": "string" },
    "eventTime":    { "type": "string" },
    "producer":      { "type": "string" },

    "eventData": { "$ref": "#/definitions/TaskChangeData" }
  },

  "definitions": {
    "TaskChangeData": {
      "type": "object",
      "properties": {
        "taskPublicId": {
          "type": "string"
        },
        "userPublicId": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "taskChangeDate": {
          "type": "string"
        }
      },
      "required": [
        "taskPublicId",
        "userPublicId",
        "status",
        "taskChangeDate"
      ]
    }
  },

  "required": [
    "eventUID",
    "eventVersion",
    "eventName",
    "eventTime",
    "producer",
    "eventData"
  ]
}