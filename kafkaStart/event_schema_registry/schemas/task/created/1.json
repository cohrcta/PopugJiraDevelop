{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title": "TaskCudEvent",

  "type": "object",

  "additionalProperties": true,

  "properties": {
    "eventUID":      { "type": "string" },
    "eventVersion": { "type": "integer" },
    "eventName":    { "type": "string" },
    "eventTime":    { "type": "string" },
    "producer":      { "type": "string" },
    "eventData": { "$ref": "#/definitions/TaskCudData" }
  },

    "definitions": {
    "TaskCudData": {
      "type": "object",
      "properties": {
        "userCreatePublicId": {
          "type": "string"
        },
        "userAssignPublicId": {
          "type": ["string", "null"]
        },
        "taskPublicId": {
          "type": "string"
        },
        "taskDescription": {
          "type": "string"
        },
        "taskTitle": {
          "type": "string"
        },
        "taskCreteDate": {
          "type": "string"
        }
      },
      "required": [
        "taskDescription",
        "taskCreteDate",
        "taskTitle",
        "userCreatePublicId",
        "taskPublicId"
      ]
    }
  },

  "required": [
    "eventUID",
    "eventVersion",
    "eventName",
    "eventTime",
    "producer",
    "eventData"
  ]
}